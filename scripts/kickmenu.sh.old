            ;;  
            
            
           e)
	    sudo cp -rf /opt/KickPi-OS/OLED/OLED.txt /home/pi/
            dialog --title "Did you have a OLED Display installed? " \
            --backtitle "KichPi-OS OLED switcher" \
            --yesno "\n If you don't have a OLED Display,\n please answer with no. \n  \n <Errno 121 Remote I/O error> " \ 10 60
            response=$?

            case $response in
                  1) 
	         echo "OLED disabled...."
	         sudo rm -rf /OLED
	         
	                           ;;
                  0) 
		  echo "Ok, OLED is installed"
		  sudo cp -rf /opt/KickPi-OS/OLED/ /
	          sudo chmod -R 777 /OLED/
   
                                    ;;

                  255) echo "[ESC] key pressed.";;
                           esac
            ;;  
            
          n)
#!/bin/bash
set -e

# ************************************************
# Compile Amiberry
# ************************************************

AMIBERRY_DIR="$HOME/amiberry"
INSTALL_DIR="/opt/Amiga"
BACKUP_DIR="/opt/Backup"

echo "Installing dependencies..."
sudo apt update
sudo apt install -y \
    build-essential git cmake \
    libsdl2-dev libsdl2-image-dev \
    libflac-dev libmpg123-dev \
    libpng-dev libmpeg2-4-dev \
    libserialport-dev libportmidi-dev \
    libenet-dev libpcap-dev libzstd-dev

echo "Cleaning old source..."
rm -rf "$AMIBERRY_DIR"

echo "Cloning Amiberry repository..."
git clone https://github.com/midwan/amiberry "$AMIBERRY_DIR"

cd "$AMIBERRY_DIR"

echo "Compiling Amiberry..."
cmake -B build
cmake --build build -j$(nproc)

echo "Creating backup..."
sudo mkdir -p "$BACKUP_DIR"

if [ -f "$INSTALL_DIR/amiberry" ]; then
    sudo cp -f "$INSTALL_DIR/amiberry" "$BACKUP_DIR/amiberry_$(date +%Y%m%d_%H%M%S)"
fi

echo "Installing new version..."
sudo cp build/amiberry "$INSTALL_DIR/amiberry"
sudo cp -r data plugins external whdboot "$INSTALL_DIR/"

echo "Cleaning up..."
cd
rm -rf "$AMIBERRY_DIR"

echo "Done! Amiberry successfully compiled and installed."

       
       o)
